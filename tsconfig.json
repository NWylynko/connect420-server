{
  "compilerOptions": {
    "outDir": "./build",
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "alwaysStrict": true,
    "removeComments": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "exclude": [
    "**/*.test.ts"
  ]
}