{
  "compilerOptions": {
    "outDir": "./build",
    "lib": ["ES2020"],
    "module": "commonjs",
    "target": "es2019",
    "alwaysStrict": true,
    "removeComments": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "**/*.test.ts"
  ]
}